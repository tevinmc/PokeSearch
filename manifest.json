{
    "name": "PokeSearch",
    "version": "1.0",
    "description": "The one stop shop for all your Poke needs",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/pokeball-pixels.png"
        },
        "default_title": "Welcome to pokemon"
    },
    "manifest_version": 2
}